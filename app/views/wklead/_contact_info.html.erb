<fieldset class="box">
	<legend><%=l(:label_content_information, l(:label_contact))%></legend>
	<div class="splitcontent">
		<div class="splitcontentleft">
			<table>
				<tr>
					<th align="left"><%= l(:label_work_phone) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("work_phone", address.blank?  ? "" : address.work_phone, :size => 25, :disabled => disable, maxlength: 15) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_mobile) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("mobile", address.blank?  ? "" : address.mobile, :size => 25, :disabled => disable, maxlength: 15) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:field_mail) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("email", address.blank?  ? "" : address.email, :size => 25, :disabled => disable, maxlength: 40) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_fax) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("fax", address.blank?  ? "" : address.fax, :size => 25, :disabled => disable, maxlength: 15) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_website) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("website", address.blank? ? "" : address.website, :size => 25, :disabled => disable, maxlength: 40) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_account_address1) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("address1",address.blank?  ? "" : address.address1,:size =>25, :disabled => disable, maxlength: 200) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_account_address2) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("address2",address.blank?  ? "" : address.address2,:size =>25, :disabled => disable, maxlength: 200) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_city) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("city", address.blank?  ? "" : address.city,:size =>25, :disabled => disable, maxlength: 30) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_state) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("state", address.blank?  ? "" : address.state,:size =>25, :disabled => disable, maxlength: 30) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_country) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("country", address.blank?  ? "" : address.country,:size =>25, :disabled => disable, maxlength: 30) %> </td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_pin) %></th>
					<td align="left" style="padding-left:10px;"><%=h text_field_tag("pin", address.blank?  ? "" : address.pin,:size =>25, :maxlength => 6, :disabled => disable) %> </td>
				</tr>
			</table>
		</div>

		<!-- For  CRM Geolocation -->
		<%
			showMap ||= false
			showDefault ||= false
		%>
		<% if showMap && isChecked("crm_save_geo_location") || showDefault %>
			<div class="splitcontentright">
				<div id="mapContainer" style="width:300px;height:300px;"></div>
				<%= render partial: "wkgeolocation/location_map", locals: { locations: [[address.try(:longitude) || "", address.try(:latitude) || ""]] } %>
				<p style="font-weight: bold; padding-left: 1px">
					<label><%= check_box_tag("save_current_location", 1) %>  <%= l(:label_save_c_geolocation) %></label>
				</p>
			</div>
		<% end %>
	</div>
</fieldset>