<%= javascript_include_tag 'index', :plugin => "redmine_wktime" %>
<%= form_tag({:controller => controller_name, :action => 'index'}, :method => :post, :id => 'query_form') do %>
		<fieldset>
			<%=h hidden_field_tag('tab', controller_name) %>
			<div class="form-group">
				<label for='location'><%= l(:label_location) %>:</label>
				<%=h select_tag("location_id", generic_options_for_select(WkLocation, nil, 'name', 'name', 'id', params[:location_id], true), class: 'small-select') %>
			</div>
			<div class="form-group"><label for='name'><%= controller.getAccountLbl %>:</label>
			<%= text_field_tag 'accountname', params[:accountname] %>
		</div>
			<div class="form-group">
				<label for='phone'><%= l(:label_phone) %>:</label>
				<%= text_field_tag 'phone', params[:phone] %>
			</div>
			<div class="form-group">
				<label for='address'><%= l(:label_address) %>:</label>
				<%= text_field_tag 'address', params[:address] %>
			</div>
			<div class="form-group">
				<label for='city'><%= l(:label_city) %>:</label>
				<%= text_field_tag 'city', params[:city] %>
			</div>
			<div class="set">
				<%= submit_tag l(:button_apply), :class => "small", :name => nil %>
				<%= link_to l(:button_clear), {:controller => controller_name, :action => 'index', :tab => controller_name}, :class => 'icon icon-reload' %>
			</div>
		</fieldset>
<% end %>
		<div class="wk-contextual">
			<%= link_to l(:label_new_account), url_for(:controller => controller_name, :action => 'edit'), :class => 'icon icon-time-add'%>
		</div>
<%= render :partial => 'wkaccount/account_list'%>
