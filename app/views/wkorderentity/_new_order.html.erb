		account = WkAccount.find(parentArr[0][1].to_i)
		projectArr = account.projects.pluck(:name, :id)
		isAccBilling = false
		if account.account_billing
			projectArr.unshift(["", 0])
			isAccBilling = true
		end
	else
		projectArr = ["", 0]
	end
 %>
