				<tr>
					<td>
						<% logo = Setting.plugin_redmine_wktime['wktime_header_logo'] %>					
						<% if !logo.blank? && (File.exist? (Redmine::Plugin.public_directory + "/redmine_wktime/images/" + logo)) %>						
							<%= image_tag("#{logo}", :plugin => "redmine_wktime") %>
						<% end %>
					</td>
				</tr>
