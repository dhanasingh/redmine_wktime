<%= javascript_include_tag "dashboard", plugin: "redmine_wktime" %>
<div>
  <div style="float:left"><%= title l(:label_my_dashboard)%></div>
  <% if showDashboard && hasSettingPerm%>
    <%= render :partial => "wkdashboard/side_bar" %>
  <% end %>
</div>
<div style="clear:both"></div>

<% last_index = 0 %>
<% @empDash.each do |empdata| %>
  <div class="emp-dashboard-section">
    <div class="emp-dashboard-title"><%= empdata[:title] %></div>

    <div class="emp-dashboard-container">
      <% empdata[:data].each_with_index do |data, i| %>
        <% i = last_index+1 if last_index != 0 %>
        <div id="colors_<%= i %>" 
             class="emp-box blue %>"
             onclick="empDetailReport('<%=data[:type]%>','<%=data[:issue_id]%>','<%=empdata[:title]%>')">
          <p class="count"><%= data[:value] %></p>
          <p class="label"><%= data[:name] %></p>
          <% if data[:date].present? %>
            <p class="date"><%= data[:date] %></p>
          <% end %>
        </div>
        <% last_index = i %>
      <% end %>
    </div>
  </div>
<% end %>

<style>
  .emp-dashboard-section {
    margin-bottom: 32px;
  }

  .emp-dashboard-title {
    text-align: center;
    font-size: 30px;
    font-weight: bold;
    padding-top: 10px;
    flex-wrap: wrap;
  }

  .emp-dashboard-container {
    display: flex;
    gap: 16px; /* Slightly increased gap for better spacing */
    margin-top: 12px;
    flex-wrap: wrap; /* Allow wrapping on smaller screens */
  }

  .emp-box {
    border-radius: 16px; /* smoother, more modern rounded corners */
    width: 100%;
    max-width: 280px; /* limit card width for nicer layout */
    height: 165px;
    box-shadow: 0 0 24px 6px rgba(0,0,0,0.25); /* Stronger all-side shadow */
    text-align: center;
    font-family: Roboto, 'Fira Sans', Oxygen, 'Open Sans', Ubuntu, sans-serif;
    display: flex;
    flex-direction: column;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease; /* Smooth hover effect */
  }

  .emp-box:hover {
    transform: translateY(-5px); /* Lift on hover */
    box-shadow: 0 0 12px 2px rgba(0, 0, 0, 0.1);
  }

  .emp-box.blue {
    color: #2f5bea;
  }

  .emp-box .count {
    font-size: 28px;
    font-weight: bold;
    margin: 0;
  }

  .emp-box .label {
    font-size: 14px;
    font-weight: bold;
    color: #000;
    margin: 6px 0 0 0;
  }

  .emp-box .date {
    font-size: 13px;
    color: #555;
    margin: 2px 0 0 0;
  }
</style>