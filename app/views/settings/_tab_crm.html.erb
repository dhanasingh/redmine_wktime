<fieldset>
	<legend><%= l(:label_crm) %></legend>
	
	
	
	<%
			accountGroups = Array.new
			accGroup = Group.all.sort
			unless accGroup.blank?
				accountGroups = accGroup.collect {|t| [t.name, t.id] }
			end
			accountGroups.unshift(["",""])
	%>
	<p style="padding-left: 190px;">
		<label><%=l(:label_crm_user_group)%></label>
		<%=  select_tag('settings[wktime_crm_group]',
				options_for_select(accountGroups, :selected => @settings['wktime_crm_group'].blank? ? "" : @settings['wktime_crm_group']))%>
	</p>
	
	<p style="padding-left: 190px;">
		<label><%=l(:label_crm_admin_group)%></label>
		<%=  select_tag('settings[wktime_crm_admin]',
				options_for_select(accountGroups, :selected => @settings['wktime_crm_admin'].blank? ? "" : @settings['wktime_crm_admin']))%>
	</p>
	
</fieldset>